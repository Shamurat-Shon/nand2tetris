/**
 * Half adder:
 * Computes sum and carry of two bits.
 * outSum = a XOR b
 * outCarry = a AND b
 */

CHIP HalfAdder {
    IN a, b;
    OUT sum, carry;

    PARTS:
    Xor(a=a, b=b, out=sum);
    And(a=a, b=b, out=carry);
}